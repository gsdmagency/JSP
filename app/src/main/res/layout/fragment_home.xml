<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    android:orientation="horizontal"
    tools:context=".Fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/landingImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:id="@+id/lnlAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/landingImage"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:alpha="0.5"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/borders"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAboutUsTitle"
                    style="@style/Headings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_us_title" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/about_us_desc"
                        android:textColor="@color/content_" />
                </ScrollView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>